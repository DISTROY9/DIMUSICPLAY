<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/dark_background"
    tools:context=".NowPlayingActivity">

    <ImageView
        android:id="@+id/albumArtImageViewLarge"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <com.gauravk.audiovisualizer.visualizer.BlastVisualizer
        android:id="@+id/blastVisualizer"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:avColor="@color/color_accent"
        app:avDensity="0.6"
        app:avSpeed="medium"
        app:layout_constraintTop_toBottomOf="@id/albumArtImageViewLarge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/nowPlayingTitleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Título de la Canción"
        android:textSize="22sp"
        android:textStyle="bold"
        android:fontFamily="@font/russo_one_regular"
        android:textColor="@color/dark_primary_text"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/blastVisualizer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/nowPlayingArtistLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Artista"
        android:textSize="18sp"
        android:textColor="@color/dark_secondary_text"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/nowPlayingTitleLarge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <SeekBar
        android:id="@+id/seekBarLarge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:progressTint="@color/color_accent"
        android:thumbTint="@color/color_accent"
        app:layout_constraintTop_toBottomOf="@id/nowPlayingArtistLarge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/seekBarLarge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/previousButtonLarge"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_previous"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/dark_primary_text"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/playPauseButtonLarge"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/ic_play"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/dark_primary_text"
            android:scaleType="fitCenter"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"/>

        <ImageButton
            android:id="@+id/nextButtonLarge"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_next"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/dark_primary_text"
            android:scaleType="fitCenter"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
